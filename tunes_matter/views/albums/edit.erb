<h1>Edit Album</h1>

<form action="/albums/<%= @album.id %>" method="POST">

  <label class="album-label" for="artist-confirm">Confirm Artist:</label>
  <select id="artist-confirm" name="artist_id">

    <% @artists.each do |artist| %>
    <option <%= "selected" if @album.artist.name == artist.name %> value="<%= artist.id %>"> <%= artist.name %> </option>
    <% end %>
  </select>

  <hr>

  <label class="album-label" for="title-field">Album title:</label>
  <input class="update-field" id="title-field" name="title" type="text" value="<%= @album.title %>"/>

  <hr>

  <label class="album-label" for="genre-field">Album Genre:</label>
  <input class="update-field" id="genre-field" name="genre" type="text" value="<%= @album.genre %>"/>

  <hr>

  <label class="album-label" for="original-release-year-field">Original Release Year:</label>
  <input class="update-field" id="original-release-year-field" name="original_release_year" type="number" value="<%= @album.original_release_year %>"/>

  <hr>

  <input class="input-button" type="submit" value="Update Album Details">

</form>
