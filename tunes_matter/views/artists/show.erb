<h1>Artist View</h1>

<h2><%= @artist.name %> <a class="link-near-heading" href="/albums/new">Add New Album</a></h2> 
<hr>

<% @albums.each do |album| %>

<h3 class="data-row">"<%= album.title %>" (<%= album.original_release_year %>) Genre: <%= album.genre %></h3> <a class="edit-link" href="/albums/<%= album.id%>/edit">EDIT</a> <form class="delete-form" action="/albums/<%= album.id %>/delete" method="POST">
  <input type="submit" class="delete-link" value="DELETE"></form>
<p>Editions:</p>
<% editions = album.all_editions %>
<% editions.each do |edition| %>
<p class="data-row"><%= edition.edition_release_year %> <%= edition.version_notes %> release on <%= edition.format() %> - Â£<%= sprintf( '%.2f', (edition.retail_price)/100) %></p>

<p class="stocklevel"> - <%= edition.number_in_stock %> in stock <a class="edit-link" href="/editions/<%= edition.id%>/edit">EDIT</a></p>


<% end %>
<hr>
<% end %>
